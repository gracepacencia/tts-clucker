=form_for @cluck do |f|
  - if @cluck.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cluck.errors.count, "error")} prohibited this cluck from being saved:"
      %ul
        - @cluck.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :userid
    = f.text_field :userid

  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :posted_date
    = f.text_field:posted_date

  
  .actions
    = f.submit 'Save'
